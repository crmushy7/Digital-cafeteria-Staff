<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/card_bg_withborder"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:orientation="vertical">
        <TextView
            android:textColor="#FF0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CALLING DEVICE "
            android:layout_marginTop="15sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textSize="22sp"/>
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THIS DEVICE IS BEING USED TO CALL CUSTOMERS, MAKE SURE IT IS CONNECTED TO SOUND SYSTEM"
            android:layout_marginTop="10sp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="22sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_terminatecalling"
            android:layout_width="170sp"
            android:layout_height="50sp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/login"
            android:text="TERMINATE"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </LinearLayout>

</RelativeLayout>